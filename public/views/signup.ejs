  <!-- Custom styles for this template -->
  <link href="/css/signin.css" rel="stylesheet">
</head>

<body class="text-center">

  <div class="container-fluid">
    <h1>Want to be notified when another cool project has been posted?</h1>
  </div>

  <main class="form-signin w-100 m-auto">
    <form action='/' method="POST">
      <img src="/images/logo.png" alt="logo">
      <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
      <div class="form-floating">
        <div>
          <input name="firstName" type="text" class="form-control" placeholder="First Name" required autofocus>
        </div>
        <div>
          <input name="lastName" type="text" class="form-control" placeholder="Last Name" required>
        </div>
        <div>
          <input name="email" type="email" class="form-control" placeholder="email@example.com" required>
        </div>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
      <p class="mt-5 mb-3 text-muted">&copy; LearnFL</p>
    </form>
    <div class="logo-link">
      <a href="https://www.instagram.com/dennis_r2018/?igshid=YmMyMTA2M2Y%3D" target="_blank"><i class="fa-brands fa-instagram fa-2xl"></i></a>
      <a href="https://github.com/LearnFL" target="_blank"><i class="fa-brands fa-github fa-2xl"></i></a>
    </div>
  </main>
  <!-- BOOTSRAP SCRIPT -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
</body>

</html>
